<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @genre.name %>
</p>

<p>
  <strong>Total word count:</strong>
  <%= 0 || @genre.total_word_count %>
</p>

<p>
  <strong>Novel word ratio:</strong>
  <%= 0.00 || @genre.novel_word_ratio %>
</p>


<p>
  <strong>Artists:</strong><br />
  <% if !@artists.empty? %>
    <% @artists.each do |artist| %>
      - <%= link_to artist.name, artist_path(artist) %><br />
    <% end %>
  <% else %>
    <p>No artists yet associated with this genre</p>
  <% end %>
</p>
<hr />

<%= link_to 'Add Artist', new_artist_path(@genre) %> |
<%= link_to 'Edit', edit_genre_path(@genre) %> |
<%= link_to 'Genre Index', genres_path %>
