<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table border=1>
  <thead>
    <tr>
      <th>Name</th>
      <th>Total word count</th>
      <th>Novel word ratio</th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.name, genre_path(genre) %></td>
        <td><%= genre.total_word_count %></td>
        <td><%= genre.novel_word_ratio %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Genre', new_genre_path %>
