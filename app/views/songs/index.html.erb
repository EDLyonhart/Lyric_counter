<p id="notice"><%= notice %></p>

<h1>Songs</h1>

<table border=1>
  <thead>
    <tr>
      <th>Genre</th>
      <th>Artist</th>
      <th>Title</th>
      <th>Lyrics</th>
      <th>Total word count</th>
      <th>Unique words</th>
      <th>Novel word ratio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.find_genre.name, genre_path(song.find_genre.id) %></td>
        <td><%= link_to song.find_artist.name, artist_path(song.find_artist.id) %></td>
        <td><%= link_to song.title, song_path(song) %></td>
        <td><%= song.lyrics.truncate(50) %></td>
        <td><%= song.word_count %></td>
        <td><%= song.novel_word_count %></td>
        <td><%= song.novel_word_ratio %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

